<p id="notice"><%= notice %></p>

<div>
<%= render 'form', hack: @hack %>
</div>

<h1>Hacks</h1>

<table class="table table-striped ">
  <thead class='bg-primary'>
    <tr>
      <th>Challenge Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Upvote</th>
      <th>Created By</th>
      <th>Created AT</th>
      <th>Tags</th>
      <th>Collabration</th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @hacks.each do |hack| %>
      <tr>
        <td><%= hack.id %></td>
        <td><%= hack.title %></td>
        <td><%= hack.description %></td>
        <td><%= hack.get_upvotes.size %>&nbsp&nbsp&nbsp&nbsp&nbsp
        <% if current_user.id != hack.user_id%>
        <%= link_to "+" , like_hack_path(hack),method: :put %>
        <%end%></td>
        <td><%= hack.username%></td>
        <td><%= hack.created_at %></td>
        <td><%= hack.tags %></td>
        <td><%hack.followers.each do  |i|%>
          <%=i.username %></br>
        <%end%> </td>
        <td>
        <% if current_user.id != hack.user_id%>
        <%= link_to "+" , follow_hack_path(hack),method: :put %>
        <%end%> </td>
        <td><%= link_to 'Show', hack %></td>
        <td><%= link_to 'Edit', edit_hack_path(hack) %></td>
        <td><%= link_to 'Destroy', hack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hack', new_hack_path %>
